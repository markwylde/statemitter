{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
  },
  "include": [
    "./src"
  ],
  "typedocOptions": {
    "entryPoints": ["src"],
    "out": "docs"
  }
}
